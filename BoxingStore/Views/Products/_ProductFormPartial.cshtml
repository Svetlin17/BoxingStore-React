@model ProductFormServiceModel


<div class="row">
    <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6">
        <h2 class="heading-margin" text-center>@ViewBag.Title</h2>

        <form method="post">
            <div class="form-group">
                <label asp-for="Brand"></label>
                <input asp-for="Brand" class="form-control" placeholder="">
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Name"></label>
                <input asp-for="Name" class="form-control" placeholder="">
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Price"></label>
                <input asp-for="Price" class="form-control" placeholder="">
                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="QuantityS">Quantity</label>
            </div>
            <div class="form-group row">
                <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 row">
                    <label class="col-md-2">S: </label>
                    <input asp-for="QuantityS" class="form-control col-md-4">
                    <span asp-validation-for="QuantityS" class="text-danger"></span>
                </div>
                <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 row">
                    <label class="col-md-2">M: </label>
                    <input asp-for="QuantityM" class="form-control col-md-4">
                    <span asp-validation-for="QuantityM" class="text-danger"></span>
                </div>
                <div class="col-sm-12 offset-lg-2 col-lg-8 offset-xl-3 col-xl-6 row">
                    <label class="col-md-2">L: </label>
                    <input asp-for="QuantityL" class="form-control col-md-4">
                    <span asp-validation-for="QuantityL" class="text-danger"></span>
                </div>
                <div class="text-danger offset-1">
                    @Html.ValidationMessage("allSizesAreZero")
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Description"></label>
                <textarea asp-for="Description" rows="4" class="form-control" placeholder=""></textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="ImageUrl"></label>
                <input asp-for="ImageUrl" class="form-control" placeholder="">
                <span asp-validation-for="ImageUrl" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CategoryId"></label>
                <select asp-for="CategoryId" class="form-control">
                    @foreach (var category in Model.Categories)
                    {
                        <option value="@category.Id">@category.Name</option>
                    }
                </select>
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>

            <input class="btn btn-primary" id="save-btn" type="submit" value="Save" />
        </form>
    </div>
</div>

<script>
    function preventDoubleClick() {
        var btn = document.getElementById("save-btn");

        btn.disabled = true;
    }
</script>